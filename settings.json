// Place your settings in this file to overwrite the default settings
{
  // Visual Studio Code settings
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "typescript.preferences.quoteStyle": "single",
  "workbench.editor.tabSizing": "shrink",
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "workbench.startupEditor": "newUntitledFile",

  // GitExtensions extension settings
  "gitExtensions.editor.contextmenu": false,
  "gitExtensions.editor.title.contextmenu": false,
  "gitExtensions.explorer.contextmenu": false,
  "gitExtensions.scm.title.menu": false,

  // GitLens extension settings
  "gitlens.menus": {
    "editor": {
      "clipboard": false,
      "compare": false
    },
    "editorGroup": {
      "blame": false,
      "compare": false
    },
    "editorTab": {
      "clipboard": false,
      "compare": false,
      "history": false,
      "remote": false
    },
    "explorer": {
      "clipboard": false,
      "compare": false,
      "history": false,
      "remote": false
    },
    "scmGroup": {
      "compare": false,
      "openClose": false,
      "stash": false,
      "stashInline": false
    },
    "scmItem": {
      "clipboard": false,
      "compare": false,
      "history": false,
      "remote": false,
      "stash": false
    }
  },
  "gitlens.views.fileHistory.enabled": false,
  "gitlens.views.lineHistory.enabled": false,
  "gitlens.views.repositories.enabled": false,

  // Project Manager extension settings
  "projectManager.openInNewWindowWhenClickingInStatusBar": true,
}
